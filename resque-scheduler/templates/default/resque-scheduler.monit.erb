check process resque-scheduler_<%= @application %>
  with pidfile "<%= @current_path %>/tmp/pids/resque-scheduler.pid"
  start program = "/bin/su -lc 'cd <%= @current_path %> && <%= @environment.map { |k, v| "#{k}=\"#{v}\"" }.join(' ') %> PIDFILE="<%= @current_path %>/tmp/pids/resque-scheduler.pid" /usr/local/bin/bundle exec rake resque:scheduler' - deploy" with timeout 60 seconds
  stop program = "/bin/su -lc 'kill -QUIT `cat <%= @current_path %>/tmp/pids/resque-scheduler.pid`' - deploy"
  if 5 restarts within 5 cycles then timeout
