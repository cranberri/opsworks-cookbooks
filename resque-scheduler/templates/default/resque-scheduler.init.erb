#! /bin/sh

### BEGIN INIT INFO
# Provides:          resque-scheduler
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:     $local_fs $remote_fs $network $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts resque-scheduler for <%= @application %>
# Description:       starts resque-scheduler for <%= @application %>
### END INIT INFO

export SL_NAME=resque-scheduler_rails
NAME=resque-scheduler_<%= @application %>
DESC=resque-scheduler_<%= @application %>
# CMD=<%= @current_path %>/script/resque-scheduler
CMD="/usr/local/bin/bundle exec rake resque:scheduler"

cd <%= @current_path %>

case "$1" in
  start)
    echo -n "Starting $DESC: "
    <%= @environment.map { |k, v| "#{k}=\"#{v}\"" }.join(' ') %> $CMD start
    echo "$NAME."
    ;;
  stop)
    echo -n "Stopping $DESC: "
    $CMD stop
    echo "$NAME."
    ;;
  restart)
    echo -n "Restarting $DESC: "
    <%= @environment.map { |k, v| "#{k}=\"#{v}\"" }.join(' ') %> $CMD restart
    echo "$NAME."
    ;;
  reload)
    echo -n "Reloading $DESC configuration: "
    <%= @environment.map { |k, v| "#{k}=\"#{v}\"" }.join(' ') %> $CMD restart
    echo "$NAME."
    ;;
  *)
    echo "Usage: $NAME {start|stop|restart|reload}" >&2
    exit 1
    ;;
esac

exit 0
