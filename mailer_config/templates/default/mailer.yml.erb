<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  host: <%= (@mailer[:host] || 'localhost').to_s.inspect %>
  port: <%= (@mailer[:port] || 80).to_i.inspect %>
  sender: <%= @mailer[:sender].to_s.inspect %>
<% if @mailer[:smtp].present? -%>
  smtp:
    host: <%= @mailer[:smtp][:host].to_s.inspect %>
    port: <%= @mailer[:smtp][:port].to_i.inspect %>
    username: <%= @mailer[:smtp][:username].to_s.inspect %>
    password: <%= @mailer[:smtp][:password].to_s.inspect %>
<% end -%>
<% end %>
